# Create a a list of items
shopping = []
print(f"Enter your items one by one. Type 'done' when you're finished.")

#Ask the user what items they want to list in their shopping_list
while True:
    item = input(f"Enter an item (or type 'done' to finish): ")
    if item.lower() == "done":
        break
    shopping.append(item)

# Print list
print("My items are:")
for i in shopping:
    print("-", i)
